            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="index.php">
          <img src="images/nav/mob-header-scroll-logo.png" alt="mopcon">
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="cfp.php">{{main.nav.cfp}}</a></li>
            <li><a href="schedule.html">{{main.nav.schedule}}</a></li>
            <li><a href="schedule_unconf.html">{{main.nav.schedule_unconf}}</a></li>
            <li><a href="speaker.php">{{main.nav.speaker}}</a></li>
            <li><a href="sponsor.php">{{main.nav.sponsor}}</a></li>
            <li><a href="community.php">{{main.nav.community}}</a></li>
            <li><a href="http://hackfoldr.org/mopcon2016/">Hackpad</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{main.nav.previous}}<span class="caret"></span></a>
              <ul class="dropdown-menu">
                {%for dir in webList %}
                  <li><a href="/{{dir}}/">- {{dir}}</a></li>
                {%endfor%}
              </ul>
            </li>
            <li class="border-item">
              <a href="?lang=en" hreflang="zh-Hant">EN</a>
              <a href="?lang=zh" hreflang="en-US">中</a>
            </li>

          </ul>
          
        </div>
        <!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>  

  {% block content %}
  {% endblock %}

    <footer class="footer">
      <div class="bucket-panel">
          <div class="bucket-row text-center">
                {% block footer %}
                {% endblock %}
          </div>
          <div class="bucket-row">
            <a href="mailto:contact@mopcon.org" class="email relative">
              <img src="images/footer/email.png" alt="信箱">
            </a>
          </div>
          <img src="images/footer/footer-logo.png" alt="mopcon2016" class="img-responsive center-block common-idx">
