<!doctype html>
<html lang="{{ lang }}">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    
    <meta content="{{main.ogtitle}}" property="og:title">
    <meta content="http://{{website}}/2016/{{og_url}}" property="og:url">
    <meta content="{{main.ogdesc}}" property="og:description">
    <meta content="http://{{website}}/2016/images/{{og_image}}" property="og:image">
    <meta content="200" property="og:image:width" >
    <meta content="200" property="og:image:height" >
    <meta content="website" property="og:type">
    <meta content="{{main.ogsitename}}" property="og:site_name">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>{% if main.pagetitle %}{{main.pagetitle}} - {% endif %}{{main.sitetitle}}</title>

    <link rel="alternate" hreflang="zh-Hant" href="{{app.request.getSchemeAndHttpHost ~ '/2016/' ~ pageid ~ '.php?lang=zh' }}" />
    <link rel="alternate" hreflang="en-US" href="{{app.request.getSchemeAndHttpHost ~ '/2016/' ~ pageid ~ '.php?lang=en' }}" />

    <link href="stylesheets/all.css?v={{version.allCss}}" rel="stylesheet" type="text/css" />
    <link href="stylesheets/web-fonts.css?v={{version.webFontsCss}}" rel="stylesheet" type="text/css" />
    <script src="javascripts/all/all.js?v={{version.allJs}}" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
  </head>

  <body class="{{pageid}}">
    <div class="wrapper" id="particles-js">

      <nav class="navbar navbar-default mb0">
      <div class="">
