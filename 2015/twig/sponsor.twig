{% extends 'main.twig' %}

{% block content %}
<header class="header">
	<div class="circle-logo"></div>
	<img src="images/logo_header@2x.png" height="" width="500" alt="" class="img-responsive center-block super-idx">
</header>

<div class="bucket-panel bg-transparent-black">
	<div class="bucket-row text-white">
		<i class="bucket-icon ton-li-mustache"></i>
		<h3 class="bucket-title">贊助</h3>
		<div>Sponsor</div>
	</div>
	<div class="container-lg">
		{% for level in sponsors %}
		<h2 class="text-white text-center mbxl">{{ level.name }}</h2>
		<div class="column-layout {{ level.style }}">
			{% for sponsor in level.sponsors %}
				<div class="column" >
					<div class="card">
						<h3 class="card-head">
							<img src="/2015/images/{{sponsor.pic}}" alt="" class="img-responsive mbl">
						</h3>
						<div class="card-body">
							<h4>{{ sponsor.name }}</h4>
							{% if level.style == 'column-4' %}
								<p class="hidden-xs">
							{% else %}
								<p>
							{% endif %}
								{{ sponsor.desc }}
							</p>
							<hr>
							<div class="text-right">
								{% for link_name, url in sponsor.links %}
								<a href="{{ url }}">{{ link_name }}</a>
							    {% endfor %}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}