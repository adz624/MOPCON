<!doctype html>
<html lang="{{ lang }}">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>{% if main.pagetitle %}{{main.pagetitle}} - {% endif %}{{main.sitetitle}}</title>
    <meta content="{{main.ogtitle}}" property="og:title">
    <meta content="http://mopcon.org/2015/{{og_url}}" property="og:url">
    <meta content="{{main.ogdesc}}" property="og:description">
    <meta content="http://mopcon.org/2015/images/{{og_image}}" property="og:image">
    <meta content="200" property="og:image:width" >
    <meta content="200" property="og:image:height" >
    <meta content="website" property="og:type">
    <meta content="{{main.ogsitename}}" property="og:site_name">

    <link rel="alternate" hreflang="zh-Hant" href="{{app.request.getSchemeAndHttpHost ~ '/2015/' ~ pageid ~ '.php?lang=zh' }}" />
    <link rel="alternate" hreflang="en-US" href="{{app.request.getSchemeAndHttpHost ~ '/2015/' ~ pageid ~ '.php?lang=en' }}" />

    <link href="stylesheets/all.css?v={{version.allCss}}" rel="stylesheet" type="text/css" />
    <link href="stylesheets/web-fonts.css?v={{version.webFontsCss}}" rel="stylesheet" type="text/css" />
    <script src="javascripts/all/all.js?v={{version.allJs}}" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <style>
      body{
        font-family: "Microsoft JhengHei","微軟正黑體","sans-serif";
      }
      {% block style %}
      {% endblock %}
    </style>
  </head>

  <body class="{{pageid}}">
    <nav class="navbar navbar-default mb0">
  <div class="">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/2015/">MOPCON</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="community.php">{{main.nav.community}}</a></li>
        <li><a href="location.php">{{main.nav.location}}</a></li>
        <li><a href="cfp.php">{{main.nav.cfp}}</a></li>
        <li><a href="speaker.php">{{main.nav.speaker}}</a></li>
        <li><a href="schedule.php">{{main.nav.schedule}}</a></li>
        <li><a href="sponsor.php">{{main.nav.sponsor}}</a></li>
        <li><a href="http://hackfoldr.org/MOPCON-2015/" target="_blank">{{main.nav.hackpad}}</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{main.nav.chatroom}}<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="https://gitter.im/MOPCON/mopcon-chat" target="_blank">{{main.nav.chatroom_gitter}}</a></li>
            <li><a href="#">{{main.nav.chatroom_irc}}</a></li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{main.nav.previous}}<span class="caret"></span></a>
          <ul class="dropdown-menu">
            {%for dir in webList %}
              <li><a href="/{{dir}}/">{{dir}}</a></li>
            {%endfor%}
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="?lang=en" hreflang="en-US">English</a></li>
        <li><a href="?lang=zh" hreflang="zh-Hant">中文</a></li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

{% block content %}
{% endblock %}

    <footer class="footer">
    <div class="container-fluid">
      <div class="row relative">
        <div class="col-sm-6">
          <a hreflang="en-US" href="?lang=en">English site</a>, <a hreflang="zh-Hant" href="?lang=zh">中文網站</a> <br>
          MOPCON 2015 <a href="/2014/">2014</a> <a href="/2013/">2013</a> <a href="/2012/">2012</a><br>
          聯絡我們：contact@mopcon.org
        </div>
        <div class="col-sm-6">
          <img src="images/logo_black.png" class="visible-xs-inline-block mtm" height="24" alt="">
        </div>
        <img src="images/logo_black.png" class="absolute pos-b0 hidden-xs" style="right: 15px" height="24" alt="">
      </div>
    </div>
</footer>
