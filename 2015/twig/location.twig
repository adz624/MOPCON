{% extends 'main.twig' %}

{% block content %}
<header class="header">
	<div class="circle-logo"></div>
	<img src="images/logo_header@2x.png" height="" width="500" alt="" class="img-responsive center-block common-idx">
</header>
<div class="bucket-panel bg-deep-blue">
	<div class="bucket-row text-white">
		<i class="bucket-icon ton-li-map-pin-2"></i>
		<h3 class="bucket-title">{{ location.icck }}</h3>
		<div>ICCK</div>
	</div>
	<div id="map-canvas" class="miner-mg" style="min-height: 450px"></div>

</div>
<div class="bucket-panel relative" >
	<div class="res-background bg-dot bg-gray" style="background-image: url(images/location/kaohsiung_01.JPG); min-height: 300px; position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;"></div>
	<div class="container container-fluid">
		<div class="row relative" style="z-index: 2">
			<div class="col-sm-7 pull-right">
				<div class="card res-background" style="background-image: url(images/location/icck_01.JPG); min-height: 300px;">
				</div>
				{% for data in location.list %}
				<div class="card">
					<h3 class="card-head">
						{{ data.header }}
					</h3>
					<div class="card-body">
						{{ data.desc | raw }}
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

<script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCWLJ01IXDDFp4w3JH4iMQdAlxTaLTERow">
</script>
<script type="text/javascript">
function initialize() {
  var myLatlng = new google.maps.LatLng({{ map.lat }},{{ map.lng }});
  var mapOptions = {
    zoom: {{ map.zoom }},
    center: myLatlng,
    draggable: false,
    scrollwheel: false
  }
  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

  var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: "{{ location.icck|e('js') }}"
  });
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>

{% endblock %}
