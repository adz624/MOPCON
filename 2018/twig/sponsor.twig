{% extends 'main.twig' %} {% block content %}
<!-- header	 -->
<section class="pageHead">
    <img src="images/headPage-sponsor.svg" alt="贊助標題圖片">
</section>
<!-- sponsor -->
<section class="sponsor container">

    <!-- 等級一 -->
    <div class="sponsor_content">
        <div class="sponsor_content_title setCenter">
            Tony Stark
        </div>
        <div class="content-radius">
            <div class="row">
            {% for id, data in sponsors %}
                {% if data['type'] == 'Tony Stark' %}
                    {% for sponsor_key, sponsor in data['logo'] %}
                        <div class="pic-item col-lg-12 col-md-12 col-sm-12 col-xs-12 tonyStark">
                            {% if data['info'][sponsor_key] %}
                                {% if from_app == true %}
                                <a href="sponsor.php?id={{ data['sponsor_id'][sponsor_key] }}&from_app=1">
                                {% else %}
                                <a href="sponsor.php?id={{ data['sponsor_id'][sponsor_key] }}">
                                {% endif %}
                            {% else %}
                                <a href="{{ data['website'][sponsor_key] }}" target="_blank">
                            {% endif %}
                            <img src="./images/sponsor/{{ data['logo'][sponsor_key] }}" alt="">
                            </a>
                        </div>
                    {% endfor%}
                {% endif %}
            {% endfor%}
            </div>
        </div>
    </div>
    <!-- 等級二 -->
    <div class="sponsor_content">
        <div class="sponsor_content_title setCenter">
            Bruce Wayne
        </div>
        <div class="content-radius">
